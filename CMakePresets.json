{
	"version": 4,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 23,
		"patch": 0
	},	
	"configurePresets": [
		{
			"name": "x86_64-release",
			"displayName": "x86_64 Release Build",
			"description": "Release version of x86_64 Build",
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build/out/",
			"cacheVariables": {
				"CONFIG_ARCH": {
					"type": "STRING",
					"value": "x86_64"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "x86-64-RELEASE"
				},
				"CMAKE_TOOLCHAIN_FILE": {
					"type": "PATH",
					"value": "${sourceDir}/build/toolchains/x86_64-toolchain.cmake"
				},
				"CMAKE_INSTALL_PREFIX": {
					"type": "PATH",
					"value": "${sourceDir}/build/out/install"
				}
			}
		},
		{
			"name": "x86_64-debug",
			"inherits": "x86_64-release",
			"displayName": "x86_64 Debug Build",
			"description": "Debug version of x86_64 Build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "x86-64-DEBUG"
				}
			}
		},
		{
			"name": "aarch64-release",
			"inherits": "x86_64-release",
			"displayName": "AArch64 Release Build",
			"description": "Release version of AArch64 Build",
			"cacheVariables": {
				"CONFIG_ARCH": {
					"type":"STRING",
					"value":"aarch64"
				},
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "aarch64-RELEASE"
				},
				"CMAKE_TOOLCHAIN_FILE": {
					"type": "PATH",
					"value": "${sourceDir}/build/toolchains/aarch64-toolchain.cmake"
				}
			}
		},
		{
			"name": "aarch64-debug",
			"inherits": "aarch64-release",
			"displayName": "AArch64 Debug Build",
			"description": "Debug version of AArch64 Build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"type": "STRING",
					"value": "aarch64-DEBUG"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"configurePreset": "x86_64-debug"
		},
		{
			"name": "aarch64",
			"configurePreset": "aarch64-debug"
		}
	]
}
